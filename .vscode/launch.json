{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Antlr4: Debug ANTLR4 grammar",
            "type": "antlr-debug",
            "request": "launch",
            "input": "${workspaceFolder}/input.txt",
            "grammar": "${workspaceFolder}/main/csel/parser/CSEL.g4",
            //"actionFile": "${workspaceFolder}/main/csel/parser/lexererr.py",
            "startRule": "program",
            "printParseTree": true,
            "visualParseTree": true
        },
        {
            "name": "Python: Debug LexerSuite",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug.py",
            "console": "integratedTerminal",
            "args": ["lexer"]
        },
        {
            "name": "Python: Debug ParserSuite",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug.py",
            "console": "integratedTerminal",
            "args": ["parser"]
        },
        {
            "name": "Python: Debug ASTGenSuite",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug.py",
            "console": "integratedTerminal",
            "args": ["ast"]
        }
    ]
}